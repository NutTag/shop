<div class="wrapper"> 
  <div class="grid text-left section-{{ section.id }} product-valuables">
    
    {% if section.settings.heading != blank %}
    <h3 class="grid-item">{{ section.settings.heading }}</h3>
    {% endif %}   
   
      <div class="grid-item key-section one-whole">                   
          {% if section.settings.block_text != blank %}
          <div class="feature-text">
            <p>{{ section.settings.block_text }}</p>
          </div>
          {% endif %}
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product valuables",
    "class": "product-valuables-section",
    "settings": [
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "html",
"id": "block_text",
"label": "Text"
} 
]
  }
{% endschema %}

