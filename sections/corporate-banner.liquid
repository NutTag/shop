<div class="banner" id="corporate--{{ section.id }}" data-section-id="{{ section.id }}">

    <div class="banner-img align-{{ section.settings.align_banner_text }}" style="background-image:url({{ section.settings.banner_bg | img_url: '1550x505' }})">
    <div class="large--hide" style="background-image:url({{ section.settings.banner_bg | img_url: '1380x505' }})"></div>
      <ul> 
        <li class="banner-list">

        <div class="banner-left">
          <div class="banner-left-inner">
            <div class="wrapper wow fadeInLeft">

              {% if section.settings.main_text != "" %}
              <h1>{{ section.settings.main_text }}</h1>
              {% endif %}

              {% if section.settings.sub_text != "" %}
              <h3 class="dark-text20">{{ section.settings.sub_text }}</h3>
              {% endif %}               

              {% if section.settings.download_brochure_text != blank and section.settings.download_brochure_jotformid != blank %}    
              <a class="btn" data-fancybox-type="iframe" href="https://form.jotform.co/{{ section.settings.download_brochure_jotformid }}" target="_blank">{{ section.settings.download_brochure_text }}</a>
              {% endif %} 

            </div>
          </div>
        </div>

        </li>
      </ul>
    </div>
  
</div>

{% schema %}
{
  "name": "Corporate banner",
  "class": "corporate-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_bg",
      "label": "BG Image"
    },
    {
      "type": "select",
      "id": "align_banner_text",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "html",
      "id": "main_text",
      "label": "Main text"
    },
    {
      "type": "text",
      "id": "sub_text",
      "label": "Sub text"
    },
    {
      "type": "text",
      "id": "download_brochure_text",
      "label": "Download Brochure Text",
      "default": "Download Brochure"      
    },
    {
      "type": "text",
      "id": "download_brochure_jotformid",
      "label": "Download Brochure JotFormId",
      "default": "72428729033862",
      "info": "The form id provided by JotForms"
    }
  ]
}
{% endschema %}
