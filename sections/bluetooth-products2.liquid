{% for block in section.blocks %}  
<div class="grid-uniform text-center section-{{ section.id }} bluetooth-products2"> 
    <div class="wrapper text-center"> 
    {% if block.settings.heading != blank %}
    <h3 class="grid-item block-heading dark-text37 wow fadeInDown">{{ block.settings.heading }}</h3>
    {% endif %}
    <div class="grid-item one-whole">
      {% if block.settings.product != blank %}
      <p class="text24">{{ collections[block.settings.product].title }}</p>
      <a href="{{ collections[block.settings.product].url }}" class="buy_now btn">{{ block.settings.button_text }}</a>
      {% endif %}
    </div>
    <div class="grid-item one-whole wow zoomIn">
      {% if block.settings.block_image != blank %}             
      <img src="{{ block.settings.block_image | img_url: 'original' }}" alt="{{ block.settings.block_image.alt }}">
      {% endif %}
    </div>
    <div class="grid-item one-whole">
      {% if block.settings.sub_text != blank %}
      <p class="block-text">{{ block.settings.sub_text }}</p>
      {% endif %}
    </div>
    <div class="grid-item one-whole">
      {% if block.settings.custom_link != blank %}
      <a href="{{ block.settings.custom_link }}">
        {% endif %}
        {% if block.settings.custom_text != blank %}
        <p class="red-text">{{ block.settings.custom_text }}</p>
        {% endif %}
        {% if block.settings.custom_link != blank %}
      </a>
      {% endif %}

    </div>   

  </div>  
</div>
 {% endfor %}
{% schema %}
{
"name": "Bluetooth - Products2",
"class": "bluetooth-products-section",
"blocks" : [
{
"type": "product",
"name": "Product",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "collection",
"id": "product",
"label": "Choose product"
},
{
"type": "text",
"id": "button_text",
"label": "Button text"
},
{
"type": "image_picker",
"id": "block_image",
"label": "Image"
},
{
"type": "html",
"id": "sub_text",
"label": "Sub text"
},
{
"type": "html",
"id": "custom_text",
"label": "Custom text"
},
{
"type": "url",
"id": "custom_link",
"label": "Custom link"
}
]
} 
]
}
{% endschema %}

