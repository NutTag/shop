<div class="parallax-wrapper featured-parallax-section"> 
  <div class="grid-uniform1 text-center section-{{ section.id }} featured-parallax jarallax activate-warranty" data-jarallax='{"speed": 0.2}' style="background-image:url('{{ section.settings.featured_parallax_image | img_url: 'original' }}')">
    {% if section.settings.featured_parallax_heading != blank %}
    <h3 class="wow fadeInDown" data-wow-delay="0.1s">{{ section.settings.featured_parallax_heading }}</h3>
    {% endif %} 
    {% if section.settings.featured_parallax_text != blank %}
    <p class="wow fadeInDown" data-wow-delay="0.2s">{{ section.settings.featured_parallax_text }}</p>
    {% endif %}       

      {% if section.settings.activate_warranty_button != "" %}
        <a href="{{ section.settings.activate_warranty_link }}" class="learn_more btn green-btn">
          {{ section.settings.activate_warranty_button }}
        </a>
      {% endif %}
    
  </div>
</div>

{% schema %}
  {    
"name": "Bluetooth active warranty",
"class": "bluetooth-activate-warranty",
"settings": [
{
"type": "image_picker",
"id": "featured_parallax_image",
"label": "Parallax image",
"info": "1500x500px"
},
{
"type": "text",
"id": "featured_parallax_heading",
"label": "Heading"
},
{
"type": "text",
"id": "featured_parallax_text",
"label": "Sub-text"
},
{
"type": "text",
"id": "activate_warranty_button",
"label": "Button text"
},
{
"type": "url",
"id": "activate_warranty_link",
"label": "Button link"
}
]
  }
{% endschema %}

