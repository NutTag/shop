
{% for block in section.blocks %}  
<div class="grid-uniform text-center bluetooth-products"> 
  <div class="wrapper text-center"> 

    {% if block.settings.heading != blank %}
    <h3 class="dark-text37 wow fadeInDown">{{ block.settings.heading }}</h3>
    {% endif %}

    <div>
    {% if block.settings.collection != blank %}
      <p class="text24">{{ collections[block.settings.collection].title }}</p>
      {% if block.settings.button_text != blank %}<a href="{{ collections[block.settings.collection].url }}" class="buy_now btn">{{ block.settings.button_text }}</a>{% endif %}
    {% endif %}
    </div>

    <div class="one-whole wow zoomIn">
    {% if block.settings.block_image != blank %}             
      <img class="feature-image" src="{{ block.settings.block_image | img_url: 'original' }}" alt="{{ block.settings.block_image.alt }}">
    {% endif %}
    </div>

    <!-- Collection -->
    <div class="grid-uniform text-center collection-product-grid">
    {% for product in collections[block.settings.collection].products %}
    {% if collections[block.settings.collection].products.length == 2 %}
    <div class="grid-item push--large--one-quarter large--one-quarter medium-down--one-half wow zoomIn">
    {% elsif collections[block.settings.collection].products.length == 3 %}
    <div class="grid-item push--large--one-eight large--one-quarter medium-down--one-half wow zoomIn">
    {% else %}
    <div class="grid-item large--one-quarter medium-down--one-half wow zoomIn">
    {% endif %}
    {% include 'bluetooth-collection-product-list' %}
    </div>
    
    
    {% endfor %}
    </div>

    {% if block.settings.custom_text != blank %}
    <div class="custom-text">
    {% if block.settings.custom_link != blank or block.settings.custom_link_leadbox_ref != blank  %}
      <a href="{{ block.settings.custom_link }}"{% if block.settings.custom_link_class != blank %} class="{{ block.settings.custom_link_class }}" {% endif %}{% if block.settings.custom_link_leadbox_ref != blank %} data-leadbox-popup="{{ block.settings.custom_link_leadbox_ref }}" {% endif %}>
    {% endif %}
    {{ block.settings.custom_text }}
    {% if block.settings.custom_link != blank %}
      </a>
    {% endif %}
    </div>   
    {% endif %}

    {% if block.settings.foot_html != blank %}
    <div class="foot">
    {{ block.settings.foot_html }}
    </div>   
    {% endif %}

  </div>  
</div>

{% endfor %}

<div class="bluetooth-product-compare-separator-section"> 
  <div class="wrapper text-center">
    
    <h1>{{ section.settings.section_foot_heading }}</h1>
    <p class="text19">{{ section.settings.section_foot_lead }}</p>

    {% if section.settings.section_foot_button_text != blank %}
    {% if section.settings.section_foot_button_jotformid != blank %}
    <p><a class="btn" data-fancybox-type="iframe" href="https://form.jotform.co/{{ section.settings.section_foot_button_jotformid }}" target="_blank">{{ section.settings.section_foot_button_text }}</a></p>
    {% elsif section.settings.section_foot_button_link != blank %}
    <p><a class="btn" href="{{ section_foot_button_link }}">{{ section.settings.section_foot_button_text }}</a></p>
    {% else %}
    <p><a class="btn" href="#">{{ section.settings.section_foot_button_text }}</a></p>
    {% endif %}
    {% endif %}

  </div>
</div>



{% schema %}
{
  "name": "GPS - Products + Section",
  "class": "bluetooth-products-section",
  "settings": [
  {
    "type": "checkbox",
    "id": "enable_section_foot",
    "label": "Enable Footer Section",
    "default": true,
    "info": "100% Width Section (Green) e.g. Need more information?"
  },
  {
    "type": "text",
    "id": "section_foot_heading",
    "label": "Footer Section Heading",
    "info": "e.g. Need more information?"
  },
  {
    "type": "text",
    "id": "section_foot_lead",
    "label": "Footer Section Lead Text",
    "info": "e.g. Download product information pack."
  },
  {
    "type": "text",
    "id": "section_foot_button_text",
    "label": "Footer Section Button Text",
    "info": "e.g. Download Now"
  },
  {
    "type": "url",
    "id": "section_foot_button_link",
    "label": "Footer Section Button Link"
  },
  {
    "type": "text",
    "id": "section_foot_button_jotformid",
    "label": "Footer Section Button JotFormId",
    "default": "72428729033862",
    "info": "The form id provided by JotForms. Overrides any link (see above)."
  }],
  "blocks" : [
  {
    "type": "product",
    "name": "Product",
    "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "image_picker",
      "id": "block_image",
      "label": "Image"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Choose collection"
    },
    {
      "type": "text",
      "id": "custom_text",
      "label": "Custom text"
    },
    {
      "type": "url",
      "id": "custom_link",
      "label": "Custom link"
    },
    {
      "type": "text",
      "id": "custom_link_leadbox_ref",
      "label": "Custom Link Leadbox"
    },
    {
      "type": "text",
      "id": "custom_link_class",
      "label": "Custom Link CssClass",
      "default": "icon icon-more",
      "info": "e.g. icon icon-more"
    },
    {
    "type": "html",
    "id": "foot_html",
    "label": "Foot Html"
    }
    ]
  }]
}
{% endschema %}

