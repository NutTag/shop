<div class="wrapper"> 
  <div class="grid-uniform text-center section-{{ section.id }} bluetooth-logo">
     
    {% if section.settings.heading != blank %}
    <h3 class="grid-item one-whole block-heading dark-text37 wow fadeInDown">{{ section.settings.heading }}</h3>
    {% endif %}
    {% if section.settings.sub_text != blank %}
    <div>

     <p class="grid-item block-text text19"><br />{{ section.settings.sub_text }}</p>
    </div>
    {% endif %}
    
    <div class="display-table">
    {% for block in section.blocks %}
    
      <div class="grid-item one-sixth display-table-cell wow fadeInUp">
          
        {% if block.settings.block_image != blank %}   
            <img src="{{ block.settings.block_image | img_url: 'original' }}" alt="{{ block.settings.block_image.alt }}">
        {% endif %}          
      </div>
    {% endfor %}    
  </div>
      {% if section.settings.made_with_icon != blank %}
      <div class="grid-item one-whole bottom-img wow fadeInDown">
      <img src="{{ section.settings.made_with_icon | img_url: 'original' }}" alt="{{ section.settings.made_with_icon.alt }}"/>
      </div>
      {% endif %}
      <br />
      {% if section.settings.button_text != "" %}
        <a href="{{ section.settings.button_link }}" class="btn buy_now">
          {{ section.settings.button_text }}
        </a>
      {% endif %}

</div>
</div>

{% schema %}
{
"name": "Key Finder - Text",
"class": "bluetooth-logo-section keyfinder-section",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "html",
"id": "sub_text",
"label": "Sub text"
},
{
"type": "text",
"id": "button_text",
"label": "Button Text"
},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
}
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

