<div class="wrapper"> 
  {% if section.settings.heading != blank %}
  <h3 class="dark-text37 text-center">{{ section.settings.heading }}</h3>
  {% endif %}

  {% if section.settings.sub_text != blank %}
  <p class="text-center text19"> {{ section.settings.sub_text }}</p>
  {% endif %}
  <div class="grid-uniform text-center section-{{ section.id }} product-whats-inbox">
    <div class="display-table">
      {% for block in section.blocks %}    
      <div class="grid-item one-quarter display-table-cell">
        {% if block.settings.block_image != blank %}
        <img class="featured-img" src="{{ block.settings.block_image | img_url: 'original' }}" alt="{{ block.settings.block_image.alt }}">
        {% endif %}          
        {% if block.settings.block_title != blank %}
        <div class="feature-title">
          <h3 class="text19">{{ block.settings.block_title }}</h3>
        </div>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product - what's inbox",
  "class": "whats-inbox-section",
  "settings": [
  {
    "type": "text",
    "id": "heading",
    "label": "Heading"
  },
  {
    "type": "text",
    "id": "sub_text",
    "label": "Sub-text"
  }],
  "blocks" : [
  {
    "type": "image",
    "name": "Image",
    "settings": [
    {
    "type": "image_picker",
    "id": "block_image",
    "label": "Image"
    },
    {
    "type": "html",
    "id": "block_title",
    "label": "Title"
    }]
  }]
}
{% endschema %}

