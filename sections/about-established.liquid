<div class="wrapper">
<div class="section-{{ section.id }} about-established">
    {% if section.settings.heading != blank %}
    <h3 class="dark-text37 text-center wow fadeInDown" data-wow-delay="0.15s">{{ section.settings.heading }}</h3>
    {% endif %}

    <div class="grid">
      <!--------------Left-block-------------->
      <div class="grid-item one-half  medium-down--one-whole text-right left-est">
        <ul> 
          {% for i in (1..5) %}
          {% capture left_block_title %}left_block_title_{{ i }}{% endcapture %}              
          <li class="" data-wow-delay="0.1s">          
            <div class="section-right-content1">
              <p>{{ section.settings[left_block_title] }}</p>
            </div>
          </li>
          {% endfor %}
        </ul>      

      </div>

      <!------------Center-block-------------->
      {% if section.settings.center_block_image != blank %}
      <div class="grid-item center-img">      
        <div class="center-image1">
          <img src="{{ section.settings.center_block_image | img_url: 'original' }}" /> 
        </div>
      </div>
      {% endif %}

      <!------------Right-block-------------->
      <div class="grid-item one-half  medium-down--one-whole text-left right-est">
        <ul> 
          {% for i in (1..5) %}
          {% capture right_block_title %}right_block_title_{{ i }}{% endcapture %} 
          <div class="section-right-content1">
              <p>{{ section.settings[right_block_title] }}</p>
          </div>
          {% endfor %}
        </ul>  
      </div>
    </div>  

</div>
</div>

